<%= form_with(model: product, local: false, html: { class: "space-y-8", multipart: true }) do |form| %>
  <% if product.errors.any? %>
    <div class="rounded-md bg-red-50 p-6 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-base font-medium text-red-800">Please fix the following errors:</h3>
          <div class="mt-2 text-base text-red-700">
            <ul class="list-disc space-y-1 pl-5">
              <% product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-8">
    <div class="sm:grid sm:grid-cols-4 sm:gap-6 sm:items-start">
      <%= form.label :name, class: "block text-base font-medium text-gray-700 sm:mt-px sm:pt-2" %>
      <div class="mt-1 sm:mt-0 sm:col-span-3">
        <%= form.text_field :name, 
            class: "block w-full h-12 rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-base" %>
      </div>
    </div>

    <div class="sm:grid sm:grid-cols-4 sm:gap-6 sm:items-start">
      <%= form.label :description, class: "block text-base font-medium text-gray-700 sm:mt-px sm:pt-2" %>
      <div class="mt-1 sm:mt-0 sm:col-span-3">
        <%= form.text_area :description, rows: 4,
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-base" %>
      </div>
    </div>

    <div class="sm:grid sm:grid-cols-4 sm:gap-6 sm:items-start">
      <div class="col-span-4 grid grid-cols-2 gap-6">
        <div class="grid grid-cols-4 gap-6">
          <%= form.label :price, class: "block text-base font-medium text-gray-700 sm:mt-px sm:pt-2 col-span-1" %>
          <div class="mt-1 sm:mt-0 col-span-3">
            <%= form.number_field :price, step: 0.01,
                class: "block w-full h-12 rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-base" %>
          </div>
        </div>
        <div class="grid grid-cols-4 gap-6">
          <%= form.label :quantity, class: "block text-base font-medium text-gray-700 sm:mt-px sm:pt-2 col-span-1" %>
          <div class="mt-1 sm:mt-0 col-span-3">
            <%= form.number_field :quantity,
                class: "block w-full h-12 rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-base" %>
          </div>
        </div>
      </div>
    </div>

    <div class="sm:grid sm:grid-cols-4 sm:gap-6 sm:items-start">
      <%= form.label :image, "Product Image", class: "block text-base font-medium text-gray-700 sm:mt-px sm:pt-2" %>
      <div class="mt-1 sm:mt-0 sm:col-span-3">
        <div class="flex items-center">
          <div class="flex-grow">
            <%= form.file_field :image,
                class: "block w-full text-base text-gray-500 file:mr-4 file:py-3 file:px-4 file:rounded-md file:border-0 file:text-base file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="pt-8">
    <div class="flex justify-end gap-4">
      <%= link_to "Cancel", products_path,
          class: "rounded-md border border-gray-300 bg-white py-3 px-6 text-base font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
      <%= form.submit "Save",
          class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-3 px-6 text-base font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    </div>
  </div>
<% end %>

<div class="flex items-center justify-between px-6 py-4 bg-white shadow-sm">
  <%= link_to root_path, class: "flex items-center space-x-3", data: { turbo_frame: "_top" } do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
    </svg>
    <h1 class="text-3xl font-extrabold text-gray-900">Inventory Hub</h1>
  <% end %>
  
  <div class="flex items-center space-x-4">
    <%= link_to admin_products_path, 
        class: "text-gray-700 hover:text-indigo-600 transition-colors duration-300 font-medium",
        data: { turbo_frame: "main" } do %>
      Dashboard
    <% end %>
    
    <%= link_to new_product_path, 
        data: { turbo_frame: dom_id(Product.new) },
        class: "inline-flex items-center px-4 py-2 bg-indigo-600 text-white 
                rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 
                transition-all duration-300 ease-in-out transform hover:-translate-y-0.5 shadow-lg" do %>
      New Product
    <% end %>
  </div>
</div>
